<h2>New Habit</h2>

<%= form_for @habit do |f| %>
    <div>
        <%= f.label 'Habit' %>
        <input type="text" name="name">
    </div>
    <div>
        <select name="colors">
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="orange">Orange</option>
        </select>
    </div>
    <%= f.submit "Add" %>
<% end %>