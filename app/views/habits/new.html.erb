<h2 class="new">New Habit</h2>

<%= form_for @habit do |f| %>
    <div class="new">
        <%= f.label 'Habit' %>
        <input type="text" name="name">
    </div>
    <div class="new">
        <select name="colors">
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="orange">Orange</option>
            <option value="yellow">Yellow</option>
            <option value="green">Green</option>
            <option value="purple">Purple</option>
        </select>
    </div>
    <div class="week">
        <%= week_calendar number_of_weeks: 1 do |date| %>
            <%=date.month%>/<%= date.day %>
            <br>
            <%=check_box_tag('day_complete[]', date, checked = @habit.dates.include?(date))%>
        <% end %>
    </div>
    <span class="new"><%= f.submit "Add", class: 'btn btn-success' %></span>
<% end %>