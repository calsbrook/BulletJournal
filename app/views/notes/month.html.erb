<div class="month">
    <%= month_calendar do |date| %>
        <strong><%= date.day %></strong>
        <p>
            <%@notes.each do |note|%>
                <span class="<%=note.complete%>">
                <%if note.due.year == date.year && note.due.month == date.month && note.due.day == date.day%>
                <%= link_to note.content, note_path(note) %>
                </span>
            <% end %>
        </p>
        <% end %>
    <% end %>
</div>