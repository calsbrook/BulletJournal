<!DOCTYPE html>
<html>
  <head>
    <title>BulletJournal</title>
    <%= csrf_meta_tags %>
    <link rel="shortcut icon" href="/favicon.ico">
    <!-- jQuery below -->
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.2.1.slim.min.js' %>

    <!-- Bootstrap below -->
    <%= stylesheet_link_tag  'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>

    <!-- custom JS and CSS below -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class ="container header">
      <p>
        <% if current_user %>
          &nbsp;&nbsp;&nbsp;&nbsp;
          Welcome, <%= current_user.name %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Log Out', session_path('dummy'), method: :delete %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to "New Note", new_note_path%>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to "To Do", notes_path%>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to "Week", note_path('week')%>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to "Month", note_path('month')%>
        <% else %>
          <%= link_to 'Log In', login_path %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>
      </p>
    </div>
    <%if current_user%>
      <div class="sidebar">
        <ul>
            <li><%= link_to 'Habit Tracker', habit_path('month') %></li>
            <li><%= link_to 'All Habits', habits_path %></li>
            <li><%= link_to 'New Habit', new_habit_path %></li>
        </ul>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
